{
  "name": "appium-automation-framework",
  "version": "1.0.0",
  "description": "Appium test framwork for Ios and andriod",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test:andriod": "wido run wido.conf.js --platform andriod",
    "test:ios": "wido run wido.conf.js --platform ios",
    "test:all": "wido run wido.conf.js --platform all",
    "appium:server": "appium",
    "andriod:emulator": "emulator -avd Pixel_3a_API_30_x86 -netdelay none -netspeed full",
    "ios:simulator": "xcrun simctl boot 'iPhone 14' && open -a Simulator"
  },
  "devDependencies": {
    "@wdio/appium-service": "^9.21.0",
    "@wdio/cli": "^9.21.1",
    "@wdio/local-runner": "^9.21.0",
    "@wdio/mocha-framework": "^9.21.0",
    "@wdio/spec-reporter": "^9.20.0",
    "appium": "^3.1.2",
    "appium-uiautomator2-driver": "^6.6.2",
    "appium-xcuitest-driver": "^10.9.0",
    "chai": "^6.2.1",
    "dotenv": "^17.2.3",
    "wdio-wait-for": "^3.1.0",
    "webdriverio": "^9.21.0"
  },

  "engines": {
    "node": "^20.19.6"
  }
}
